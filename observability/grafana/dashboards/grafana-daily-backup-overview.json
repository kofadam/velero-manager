{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "Daily Backup Overview - Perfect for morning checks",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "datasource": "Prometheus",
      "description": "Quick overview of backup health across all clusters",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 85 },
              { "color": "green", "value": 95 }
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "text": {},
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "avg(velero_cluster_backup_success_rate)",
          "legendFormat": "Overall Success Rate",
          "refId": "A"
        }
      ],
      "title": "24h Backup Success Rate",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "description": "Backups that need immediate attention",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "id": 2,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "text": {},
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "sum(increase(velero_backup_failure_total[24h]))",
          "legendFormat": "Failed Backups",
          "refId": "A"
        }
      ],
      "title": "Failed Backups (Last 24h)",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "description": "Total successful backups in the last 24 hours",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "green", "value": 20 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "id": 3,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "text": {},
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "sum(increase(velero_backup_success_total[24h]))",
          "legendFormat": "Successful Backups",
          "refId": "A"
        }
      ],
      "title": "Successful Backups (Last 24h)",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "description": "Clusters that haven't had successful backups recently",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [
            {
              "options": {
                "0": { "color": "green", "index": 0, "text": "All Healthy" }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "id": 4,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "text": {},
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "count((time() - velero_cluster_last_backup_timestamp) > 86400)",
          "legendFormat": "Stale Clusters",
          "refId": "A"
        }
      ],
      "title": "Clusters Without Recent Backup",
      "type": "stat"
    },
    {
      "datasource": "Loki",
      "description": "Recent backup failures that need investigation",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "id": 5,
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": true,
        "showCommonLabels": false,
        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      },
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{namespace=\"velero\"} |= \"backup\" |~ \"Failed|Error|PartiallyFailed\" | __error__=\"\"",
          "legendFormat": "",
          "refId": "A",
          "maxLines": 20
        }
      ],
      "title": "Failed Backup Logs (Action Required)",
      "type": "logs"
    },
    {
      "datasource": "Prometheus",
      "description": "Backup status by cluster",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "color-background",
            "filterable": true
          },
          "mappings": [
            {
              "options": {
                "0": { "color": "red", "index": 0, "text": "Critical" },
                "1": { "color": "orange", "index": 1, "text": "No Backups" },
                "2": { "color": "yellow", "index": 2, "text": "Warning" },
                "3": { "color": "green", "index": 3, "text": "Healthy" }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Success Rate" },
            "properties": [
              {
                "id": "unit",
                "value": "percent"
              },
              {
                "id": "custom.displayMode",
                "value": "lcd-gauge"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "red", "value": null },
                    { "color": "red", "value": 0 },
                    { "color": "yellow", "value": 85 },
                    { "color": "green", "value": 95 }
                  ]
                }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Last Backup" },
            "properties": [
              {
                "id": "unit",
                "value": "dateTimeFromNow"
              }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "id": 6,
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "desc": false,
            "displayName": "Health Status"
          }
        ]
      },
      "targets": [
        {
          "expr": "velero_cluster_health_status",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "velero_cluster_backup_success_rate",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "expr": "velero_cluster_last_backup_timestamp * 1000",
          "format": "table",
          "instant": true,
          "refId": "C"
        },
        {
          "expr": "velero_cluster_backup_total{status=\"failed\"}",
          "format": "table",
          "instant": true,
          "refId": "D"
        }
      ],
      "title": "Cluster Backup Status Overview",
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "container": true,
              "endpoint": true,
              "instance": true,
              "job": true,
              "namespace": true,
              "pod": true,
              "service": true,
              "status": true
            },
            "renameByName": {
              "Value #A": "Health Status",
              "Value #B": "Success Rate",
              "Value #C": "Last Backup",
              "Value #D": "Failed Count",
              "cluster": "Cluster"
            }
          }
        }
      ],
      "type": "table"
    },
    {
      "datasource": "Prometheus",
      "description": "Backup completion trend for the last 24 hours",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Failed" },
            "properties": [
              {
                "id": "color",
                "value": {
                  "fixedColor": "red",
                  "mode": "fixed"
                }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Successful" },
            "properties": [
              {
                "id": "color",
                "value": {
                  "fixedColor": "green",
                  "mode": "fixed"
                }
              }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 12 },
      "id": 7,
      "options": {
        "legend": {
          "calcs": ["sum"],
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(velero_backup_success_total[1h])) * 3600",
          "legendFormat": "Successful",
          "refId": "A"
        },
        {
          "expr": "sum(rate(velero_backup_failure_total[1h])) * 3600",
          "legendFormat": "Failed",
          "refId": "B"
        }
      ],
      "title": "Backup Activity - Last 24 Hours",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Scheduled backups and their status",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "filterable": true
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Last Run" },
            "properties": [
              {
                "id": "unit",
                "value": "dateTimeFromNow"
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Paused" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  {
                    "options": {
                      "0": { "color": "green", "index": 0, "text": "Active" },
                      "1": { "color": "yellow", "index": 1, "text": "Paused" }
                    },
                    "type": "value"
                  }
                ]
              },
              {
                "id": "custom.displayMode",
                "value": "color-background"
              }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "id": 8,
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "expr": "velero_schedule_last_backup * 1000",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "velero_schedule_paused",
          "format": "table",
          "instant": true,
          "refId": "B"
        }
      ],
      "title": "Backup Schedule Status",
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "container": true,
              "endpoint": true,
              "instance": true,
              "job": true,
              "pod": true,
              "service": true
            },
            "renameByName": {
              "Value #A": "Last Run",
              "Value #B": "Paused",
              "exported_namespace": "Namespace",
              "namespace": "Namespace",
              "schedule": "Schedule Name"
            }
          }
        }
      ],
      "type": "table"
    },
    {
      "datasource": "Loki",
      "description": "Most recent successful backup completions",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "id": 9,
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": false,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      },
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{namespace=\"velero\"} |= \"backup\" |= \"Completed successfully\"",
          "legendFormat": "",
          "refId": "A",
          "maxLines": 10
        }
      ],
      "title": "Recent Successful Backups",
      "type": "logs"
    }
  ],
  "refresh": "1m",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["velero", "backup", "daily", "overview"],
